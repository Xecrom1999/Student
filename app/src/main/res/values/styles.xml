<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@android:color/primary_text_dark</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">#4CAF50</item>
        <item name="colorControlNormal">#4CAF50</item>
        <item name="colorControlActivated">#4CAF50</item>
        <item name="android:textColorLink">#4CAF50</item>
        <item name="android:textColorHighlight">#4CAF50</item>
    </style>

    <style name="PickersStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_second</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
    <item name="android:textColor">#FF6600</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">8sp</item>
    </style>
</resources>
