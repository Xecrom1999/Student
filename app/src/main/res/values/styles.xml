<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@android:color/primary_text_dark</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="OverSwipeCalendar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_new_event</item>
        <item name="colorPrimaryDark">@color/dark_new_event</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:colorPrimary">#0165B5</item>
        <item name="colorAccent">#0165B5</item>
        <item name="colorControlNormal">#0165B5</item>
        <item name="colorControlActivated">#0165B5</item>
        <item name="android:textColorLink">#0165B5</item>
        <item name="android:textColorHighlight">#0165B5</item>
    </style>

    <style name="NewEventDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="NewLessonDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/status_bar_color</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">300dp</item>
        <item name="android:windowMinWidthMinor">300dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorAccent">@color/primary_color</item>
    </style>

</resources>
