<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_note"
    android:id="@+id/rootLayout"
    tools:context=".NewNoteActivity">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/new_note_bar"/>

    <include
        android:layout_width="105dp"
        android:layout_height="125dp"
        layout="@layout/note_item_layout"
        android:id="@+id/note_item"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/note_item"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/title_hint_string"
                    android:id="@+id/title_edit"
                    android:gravity="top"
                    android:inputType="textCapSentences"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:textColor="@android:color/secondary_text_light"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/description_edit"
                    android:hint="@string/description_hint_string"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:textColor="@android:color/secondary_text_light"
                    android:layout_below="@+id/title_edit"
                    android:paddingStart="16dp"
                    />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_below="@id/description_edit"
                android:layout_marginTop="15dp"
                android:background="@drawable/ripple_effect"
                android:onClick="openCalendar"
                >

                <TextView
                    android:text="@string/date_hint_string"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/transparent"
                    android:id="@+id/date_edit"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:id="@+id/time_text"
                    android:gravity="start|center_vertical"
                    android:textColor="?android:colorPrimary"
                    android:textStyle="italic|bold"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </LinearLayout>




</RelativeLayout>
