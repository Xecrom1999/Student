<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/options_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.user.student.OptionsActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_layout"
        android:id="@+id/options_bar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textColor="@android:color/secondary_text_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textSize="18dp"
        android:text="@string/clear_data_string"
        android:background="?attr/selectableItemBackground"
        android:onClick="clearDataRequest"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textColor="@android:color/secondary_text_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textSize="18dp"
        android:text="@string/contact_us_string"
        android:background="?attr/selectableItemBackground"
        android:onClick="contactUs"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textColor="@android:color/secondary_text_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textSize="18dp"
        android:text="@string/rate_app_string"
        android:background="?attr/selectableItemBackground"
        android:onClick="rateApp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        />

    <com.google.android.gms.ads.AdView
        android:id="@+id/options_adBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6617091054237983/9637310756"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="258dp"
        />

</LinearLayout>
