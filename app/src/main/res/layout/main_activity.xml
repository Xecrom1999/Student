<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.ariel.student.MainActivity"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@drawable/background4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_string"
        android:textColor="#455A64"
        android:textStyle="bold"
        android:textSize="45dp"
        android:id="@+id/main_title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@mipmap/ic_icon"
        android:elevation="16dp"
        android:id="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:tint="@color/dark_color"
        android:layout_marginTop="60dp"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:alpha="0.8"
        android:elevation="2dp"
        android:src="@mipmap/scheulde_img"
        android:id="@+id/img_schedule"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="65dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:alpha="0.9"
        android:src="@mipmap/ic_pencil"
        android:id="@+id/img_pencil"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="55dp"
        />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:elevation="2dp"
        android:alpha="0.8"
        android:src="@mipmap/notes_img2"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="65dp"
        android:id="@+id/img_notes"
        />

    <ImageView
        android:id="@+id/img_options"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:elevation="2dp"
        android:alpha="0.8"
        android:src="@mipmap/options_img"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="57dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:alpha="0.8"
        android:src="@mipmap/calendar_img4"
        android:id="@+id/img_calendar"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="65dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/primary_color"
      android:elevation="1dp"
      android:alpha="0.6"
      android:id="@+id/linearLayout"
      android:showDividers="middle"
      android:divider="@drawable/horizontal_divider"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:showDividers="middle"
          android:divider="@drawable/vertical_divider"
         >

          <TextView
              android:layout_width="0dp"
              android:layout_height="@dimen/main_button_height"
              android:layout_weight="1"
              android:text="@string/schedule_string"
              android:textColor="@android:color/white"
              android:gravity="center_horizontal|bottom"
              android:textSize="16dp"
              android:id="@+id/schedule_button"
              android:textStyle="bold"
              android:paddingBottom="12dp"
              android:background="?attr/selectableItemBackground"/>


          <TextView
              android:layout_width="0dp"
              android:layout_height="@dimen/main_button_height"
              android:layout_weight="1"
              android:text="@string/calendar_string"
              android:textColor="@android:color/white"
              android:gravity="center_horizontal|bottom"
              android:textSize="16dp"
              android:id="@+id/calendar_button"
              android:textStyle="bold"
              android:paddingBottom="12dp"
              android:background="?attr/selectableItemBackground"/>

      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@drawable/vertical_divider"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/main_button_height"
                android:layout_weight="1"
                android:text="@string/notes_string"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal|bottom"
                android:textSize="16dp"
                android:id="@+id/notes_button"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/main_button_height"
                android:layout_weight="1"
                android:text="@string/options_string"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal|bottom"
                android:textSize="16dp"
                android:id="@+id/options_button"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

  </LinearLayout>

</RelativeLayout>