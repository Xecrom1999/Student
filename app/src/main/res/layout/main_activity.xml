<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background4">

    <com.google.android.gms.ads.AdView
        android:id="@+id/main_adBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6617091054237983/2023963555"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
         />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_schedule3"
        android:layout_alignTop="@+id/schedule_button"
        android:layout_alignStart="@id/schedule_button"
        android:elevation="100dp"
        android:id="@+id/imageView3" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:id="@+id/center"/>

    <TextView
        android:layout_height="135dp"
        android:layout_width="135dp"
        android:text="@string/calendar_string"
        android:textColor="@color/dark_calendar"
        android:background="@drawable/calendar_button"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/calendar_button"
        android:padding="8dp"
        android:elevation="6dp"
        android:layout_below="@id/center"
        android:layout_toStartOf="@+id/center"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_calendar1"
        android:layout_alignTop="@+id/calendar_button"
        android:layout_alignStart="@id/calendar_button"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:id="@+id/imageView5" />

    <TextView
        android:layout_height="135dp"
        android:layout_width="135dp"
        android:text="@string/options_string"
        android:textColor="@color/dark_new_event"
        android:background="@drawable/options_drawable"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/options_button"
        android:padding="8dp"
        android:elevation="6dp"
        android:layout_below="@id/center"
        android:layout_toEndOf="@id/center"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_notes"
        android:elevation="10dp"
        android:layout_alignTop="@+id/notes_button"
        android:layout_alignEnd="@+id/notes_button"
        android:id="@+id/imageView4" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_options"
        android:tint="@color/primary_new_event"
        android:elevation="10dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignEnd="@+id/options_button"
        android:id="@+id/imageView6" />

    <TextView
        android:layout_height="135dp"
        android:layout_width="135dp"
        android:text="@string/notes_string"
        android:textColor="@color/dark_notes"
        android:background="@drawable/notes_button"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="bottom|center_horizontal"
        android:padding="8dp"
        android:elevation="6dp"
        android:id="@+id/notes_button"
        android:layout_alignBottom="@+id/center"
        android:layout_toEndOf="@+id/center"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_height="135dp"
        android:layout_width="135dp"
        android:text="@string/schedule_string"
        android:textColor="@color/dark_schedule"
        android:background="@drawable/schedule_button"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/schedule_button"
        android:padding="8dp"
        android:elevation="6dp"
        android:layout_alignBottom="@+id/center"
        android:layout_toStartOf="@+id/center"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_string"
            android:textColor="#455A64"
            android:textStyle="bold"
            android:textSize="45sp"
            android:id="@+id/textView"
/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/ic_icon"
            android:elevation="16dp"
            android:id="@+id/imageView7"
            android:layout_marginStart="15dp"
/>
    </LinearLayout>


</RelativeLayout>