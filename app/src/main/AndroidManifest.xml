<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ariel.student.student">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="app.ariel.student.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/final_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="app.ariel.student.MainActivity"
            android:label="@string/app_name_string"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.ariel.student.ScheduleActivity"
            android:label="Schedule2"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            >
        </activity>
        <activity
            android:name="app.ariel.student.NewLessonActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            >
        </activity>
        <activity
            android:name="app.ariel.student.NotesActivity"
            android:label="@string/notes_string"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name="app.ariel.student.WeekViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.ariel.student.CalendarActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.ariel.student.CalendarDayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.ariel.student.NewEventActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="app.ariel.student.EventActivity" />
        <activity android:name="app.ariel.student.NoteActivity"
            android:windowSoftInputMode="adjustPan"/>

        <receiver
            android:name="app.ariel.student.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="app.ariel.student.OptionsActivity"
            android:screenOrientation="portrait" ></activity>
    </application>

</manifest>